<h1>All Trips</h1>
<hr>
<% @trips.each do |trip| %>
  <ul>
    <%= link_to "#{trip.name}", trip_path(trip) %>
  </ul>
<% end %>

<% if @trips.empty? %>
  <em>There are no trips at this time.</em>
<% end %>
<br />
<%= link_to "Create Trip", new_trip_path %><br />
<%= link_to "View Trips", trips_path %><br />
<%= link_to "Sign Out", destroy_user_session_path %><br />