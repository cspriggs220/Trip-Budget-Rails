<div class="hero-unit-trips">
  <h1 class="trip_name"><%= @trip.name %></h1>
  <br />
  <div>
  </div>
  <br />
</div><!-- end .hero-unit -->
<div class="container">
  <div class="content">
    <!-- <h3 class="budget_header">Budgets</h3> -->
    <div class="container budget-total-container">
      <h3 class="grand_total">Total <%= @trip.name %> Budget: $<%= @trip.budgets.sum(:total) %></h3>
    </div><!-- end .budget-total-container -->
    <div class="container budget-container">
      <% @trip.budgets.each do |budget| %>
        <table id="budget_category_<%= budget.name %>" class="table budget-table">
          <thead class="table-head">
            <tr>
              <th>Category</th>
              <th>Amount</th>
            </tr>
          </thead>
          <tbody>
            <tr class="budget_name_amount">
              <td class="budget_name"><%= link_to budget.name, edit_trip_budget_path(budget,
               :trip_id => @trip.id) %></td>
              <td class="budget_total">$<%= budget.total %></td>
            </tr>
            <% budget.expenses.each do |expense| %>
              <tr>
                <td><%= expense.name %></td>
                <td>$<%= expense.amount %></td>
                <td><%= link_to "Delete", [@trip, budget, expense], id: "delete_trip_budget_expense_#{expense.id}", :method => :delete %></td>
              </tr>
            <% end %>
            <% if budget.total > 0 %>
              <tr class="budget_balance">
                <td>Balance:</td>
                <td>$<%= budget.total - budget.expenses.sum(:amount) %></td>
              </tr>
              <tr>
                <td></td>
                <td class="expense_button btn">
                  <%= link_to "Add Expense", new_trip_budget_expense_path( @trip, budget ) %>
                </td>
              </tr>
            <% else %>
              <tr class="budget_message">
                <td><em>Click on <%= budget.name %> to add a budget</em></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      <% end %>
    </div><!-- end .budget-table -->
    <div class="footer">
      <div>
        <%= link_to "Back", trips_path, class: "btn" %>
        |
        <%= link_to "Home", :root, class: "btn" %>
      </div><!-- end .links -->
    </div><!-- end .footer -->
  </div><!-- end .content -->
</div><!-- end .container -->