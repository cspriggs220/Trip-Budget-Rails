<div class="hero-unit-welcome">
  <h1>Create a Trip</h1>
  <hr>
  <br />
  <%= form_for @trip do |f| %>
    <form class="form-horizontal">
      <div class="control-group">
        <label class="control-label">
          <%= f.label :name, "Trip Name" %>
        </label>
        <div class="controls">
          <%= f.text_field :name %>
        </div><!-- end .controls -->
      </div><!-- end .control-group -->
      <div class="control-group clearfix">
        <div class="form">
          <%= link_to "Cancel", trips_path, class: "btn cancel" %>
        </div>
        <div class="form">
          <%= f.submit "Save Trip!", class: "btn btn-primary submit" %>
        </div>
      </div>
    </form>
  <% end %>
</div><!-- end .hero-unit -->