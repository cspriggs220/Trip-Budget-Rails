<h1>Current Trip</h1>
<hr>
<br />
<div>
  <h2 id="trip_name"><%= @trip.name %></h2>
</div>
<br />
<br />
<h3>Budgets</h3>
<hr>
<% @trip.budgets.each do |budget| %>
  <div class="table_div">
    <table style="width:450px">
      <thead class="table_head">
        <tr>
          <th>Category</th>
          <th>Amount</th>
        </tr>
      </thead>
      <tbody>
        <tr class="budget_name_amount">
          <td class="budget_name"><%= link_to budget.name, edit_trip_budget_path(budget,
           :trip_id => @trip.id) %></td>
          <td class="budget_total">$<%= budget.total %></td>
        </tr>
        <% budget.expenses.each do |expense| %>
          <tr>
            <td><%= expense.name %></td>
            <td>$<%= expense.amount %></td>
            <td><%= link_to "Delete", [@trip, budget, expense], id: "delete_trip_budget_expense_#{expense.id}", :method => :delete %></td>
          </tr>
        <% end %>
        <% if budget.total > 0 %>
          <tr class="budget_balance">
            <td>Balance</td>
            <td>$<%= budget.total - budget.expenses.sum(:amount) %></td>
          </tr>
          <tr>
            <td></td>
            <td class="expense_button">
              <%= link_to "Add Expense", new_trip_budget_expense_path( @trip, budget ) %>
              <%#= form_tag({:controller => "expenses", :action => "new"}, :method => 'get') do %>
                <%#= submit_tag("Add Expense") %>
              <%# end %>
            </td>
          </tr>
        <% else %>
          <tr class="budget_message">
            <td><em>Click on <%= budget.name %> to add a budget</em></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
<% end %>
<br />
<br />
<%= link_to "Back", trips_path %>
|
<%= link_to "Home", :root %>
