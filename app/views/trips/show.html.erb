<h1>Current Trip</h1>
<hr>
<br />
<div id="trip_name">
  <%= @trip.name %>
</div>
<br />
<br />
<h2>Set Budgets</h2>
<hr>
<table style="width:400px">
  <thead id="budget_head">
    <tr>
      <th>Category</th>
      <th>Amount</th>
    </tr>
  </thead>
  <tbody>
    <% @trip.budgets.each do |budget| %>
      <tr>
        <td id="budget_name"><%= link_to budget.name, edit_trip_budget_path(budget, :trip_id => @trip.id) %></td>
        <td id="budget_total"><%= budget.total %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br />
<br />
